    <!-- Page content -->
    <h1>Stocks Summary</h1>
    <br>
    <center><img class="ui medium rounded image" src="stock.svg"></center>
    <br>
    
     
    <table class="ui inverted violet table table-bordered">
        <thead>
        <tr>
            <th>Product ID</th>
            <th>Product Name</th>
            <th>Price</th>
            <th>Description</th>
            <th>Quantity In Stock</th>
            <th>Category</th>
            <th>Expiration Date</th>
            <th>Location In Store</th>
            <th>Reorder Level</th>
            <th>Discount Info</th>
        </tr>
    </thead>
    <tbody>
        <% all_stocks.forEach(function(prod){ %>
            <tr style="background: linear-gradient(to left, #1976D2 0%, #FF5722 68%);">
                <td><%= prod.SKU %>
                <td><%= prod.Product_Name %></td>
                <td><%= prod.Price %></td>
                <td><%= prod.Descrip %></td>
                <td><%= prod.Quantity_In_Stock %></td>
                <td><%= prod.Category %></td>
                <td><%= prod.Expiration_Date %></td>
                <td><%= prod.Location_In_Store %></td>
                <td><%= prod.Reorder_Level %></td>
                <td><%= prod.Discount_Information %>&emsp;<form action="/deletestock" method="POST"><input type="hidden" name="deleteid" value="<%= prod.SKU %>"><button type="submit" class="btn btn-danger btn-sm">Delete</button></form></td>
            </tr>
        <% }); %>
    </tbody>
    </table>

    

